<pdf>

<head>
        <style>
            body {
            font-family: Arial, Helvetica, sans-serif;
            }

            table, tr, th, td {
            border: thin solid black;
            border-collapse: collapse;
            }
           #cssTable td 
          {
           text-align: center; 
           vertical-align: middle;
           }
            table {
            width: 100%;
            }

            th {
            font-weight: bold;
            }
        </style>
    </head>

    <body>
        <table>
            <tr>
                <th>Location</th>
                <td>[LOCATION]</td>
                <td>[SO_DATE]</td>
                <td>Page: [NROPAGE]</td>
            </tr>
            <tr>
                <th>Document Number</th>
                <td align='center' style="text-align: center; vertical-align: middle;">
                    <strong style="font-size: 30px;">[DOCUMENT_NUMBER1]</strong>
                </td>
                <td colspan="2" >
                    <barcode codetype="code128" height="1 cm" showtext="false" value="[DOCUMENT_NUMBER]"/>
                </td>
            </tr>
            <tr>
                <th>Customer</th>
                <td colspan="3">[CUSTOMER]</td>
            </tr>
            <tr>
                <th>Ship Via</th>
                <td colspan="3">[SHIP_VIA]</td>
            </tr>
            <tr>
                <th>Memo</th>
                <td colspan="3">[MEMO_MAIN]</td>
            </tr>
            <tr>
                <th>Customer's Address </th>
                <td colspan="3">[CUSTOMER_ADDRESS]</td>
            </tr>
        </table>


        <br/>

        <table>
            <tr>
                <th width="60%">Item</th>
                <th width="21%">QTY To Ship</th>
                <th width="19%">STATUS</th>
            </tr>
            [SALES_ORDER_LINES]
        </table>
</body>

</pdf>